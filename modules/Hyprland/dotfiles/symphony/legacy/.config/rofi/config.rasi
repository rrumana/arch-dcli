configuration {
    modi: "drun";
    show-icons: true;
    icon-theme: "Papirus-Dark";
    display-drun: "";
    drun-display-format: "{name}";
    disable-history: false;
    hide-scrollbar: true;
    sidebar-mode: false;
    terminal: "kitty";
    font: "CaskaydiaCove Nerd Font Mono 11";
}

* {
    background: transparent;
    background-alt: transparent;
    foreground: #ffffffee;
    selected: #ffffff15;
    active: #ffffff10;
    urgent: #ff5555aa;
    border-colour: transparent;
    separatorcolor: transparent;
    background-color: transparent;
    text-color: @foreground;
}

window {
    transparency: "real";
    location: center;
    anchor: center;
    width: 350px;
    border: 0;
    border-radius: 12px;
    background-color: #00000099;
}

mainbox {
    padding: 12px;
    spacing: 10px;
    background-color: transparent;
    children: [ "inputbar", "listview" ];
}

inputbar {
    padding: 10px 14px;
    margin: 0;
    border: 0;
    border-radius: 8px;
    background-color: #ffffff0c;
    children: [ "entry" ];
}

prompt {
    enabled: false;
}

entry {
    placeholder: "search";
    placeholder-color: #ffffff40;
    background-color: transparent;
    text-color: #ffffffd0;
    horizontal-align: 0.5;
    cursor: text;
    font: "CaskaydiaCove Nerd Font Mono 10";
}

listview {
    columns: 1;
    lines: 5;
    spacing: 4px;
    cycle: true;
    dynamic: true;
    scrollbar: false;
    layout: vertical;
    fixed-height: true;
    fixed-columns: true;
    background-color: transparent;
}

element {
    padding: 8px 12px;
    spacing: 10px;
    border-radius: 8px;
    background-color: transparent;
    cursor: pointer;
}

element normal.normal {
    background-color: transparent;
    text-color: #ffffffd0;
}

element selected.normal {
    background-color: #ffffff15;
    text-color: #ffffffff;
}

element alternate.normal {
    background-color: transparent;
    text-color: #ffffffd0;
}

element-icon {
    size: 26px;
    background-color: transparent;
    cursor: inherit;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    highlight: none;
    vertical-align: 0.5;
    horizontal-align: 0.0;
    cursor: inherit;
    font: "CaskaydiaCove Nerd Font Mono 11";
}
